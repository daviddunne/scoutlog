<form style="margin-top: 50px; margin-bottom: 50px;">
    <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" placeholder="Add a Title for log entry" value=title}}
    </div>
    <div class="form-group">
        <label>Date</label>
        {{input type="date" class="form-control" value=date}}
    </div>
    <div class="form-group">
       <label>Location:</label>
       {{input type="text" class="form-control" placeholder="Add location" value=location}}
   </div>
     <div class="form-group">
        <label>Patrol(s):</label>
        {{input type="text" class="form-control" placeholder="Add Patrol(s) name(s)" value=patrols}}
    </div>
    <div class="form-group">
        <label>Patrol Leader(s)</label>
        {{input type="text" class="form-control" placeholder="Add Patrol Leader(s) name(s)" value=patrol_leaders}}
    </div>
    <div class="form-group">
        <label>Attendees</label>
        {{input type="text" class="form-control" placeholder="Add names of those in attendence" value=attendees}}
    </div>
    <div class="form-group">
        <label>Weather</label>
        {{input type="text" class="form-control" placeholder="Add notes about the weather" value=weather}}
    </div>
    <div class="form-group">
        <label>Notes</label>
        {{textarea class="form-control" placeholder="Add some notes about the event" value=notes}}
    </div>
    <button {{action 'addLog'}} class="btn btn-primary">Submit</button>
</form>
